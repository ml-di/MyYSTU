<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Базовая тема -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorLightStatusBar</item>
        <item name="android:colorControlHighlight">@color/colorRipple</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/opensans</item>
    </style>

    <!-- Тема для activity с toolbar -->
    <style name="AppTheme.ToolBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorLightStatusBar</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="android:colorControlHighlight">@color/colorRipple</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/opensans</item>

    </style>

    <!-- Тема для toolbar -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorToolBar</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/opensans_bold</item>
    </style>

    <style name="ToolBar_Popup" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:fontFamily" tools:targetApi="o">@font/opensans_regular</item>
    </style>

    <!-- Тема для tabLayout -->
    <style name="TabLayout">
        <item name="android:background">@color/colorToolBar</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabRippleColor">@color/colorPrimary</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <!-- Тема для Bottom navigation -->
    <style name="BottomNavigation">
        <item name="android:background">@color/colorBackground</item>
        <item name="itemIconTint">@color/bottom_navigation_item_icon</item>
        <item name="itemTextColor">@color/bottom_navigation_item_text</item>
    </style>

    <!-- Настройки приложения -->
    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@color/colorSettingsIcon</item>
    </style>

    <!-- BottomSheetDialog -->
    <style name="SheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorLightStatusBar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>

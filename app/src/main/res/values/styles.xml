<resources>

    <!-- Базовая тема -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Тема для photoView -->
    <style name="PhotoViewTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/colorPhotoViewBackground</item>
    </style>

    <!-- Тема для activity с toolbar -->
    <style name="AppTheme.ToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTextTertiary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Тема для toolbar -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:background">@color/colorToolBar</item>
    </style>

    <!-- Тема для Bottom navigation -->
    <style name="BottomNavigation">
        <item name="android:background">#fff</item>
        <item name="itemIconTint">@color/bottom_navigation_item_icon</item>
        <item name="itemTextColor">@color/bottom_navigation_item_text</item>
    </style>

</resources>

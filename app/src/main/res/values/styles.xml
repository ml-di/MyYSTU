<resources>

    <!-- Базовая тема -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorLightStatusBar</item>
        <item name="android:colorControlHighlight">@color/colorRipple</item>
    </style>

    <!-- Тема для photoView -->
    <style name="PhotoViewTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/colorPhotoViewBackground</item>
    </style>

    <!-- Тема для activity с toolbar -->
    <style name="AppTheme.ToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorLightStatusBar</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="android:colorControlHighlight">@color/colorRipple</item>
    </style>

    <!-- Тема для toolbar -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorToolBar</item>
    </style>

    <!-- Тема для tabLayout -->
    <style name="TabLayout">
        <item name="android:background">@color/colorToolBar</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabRippleColor">@color/colorPrimary</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <!-- Тема для Bottom navigation -->
    <style name="BottomNavigation">
        <item name="android:background">@color/colorBackground</item>
        <item name="itemIconTint">@color/bottom_navigation_item_icon</item>
        <item name="itemTextColor">@color/bottom_navigation_item_text</item>
    </style>

    <!-- Настройки приложения -->
    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@color/colorSettingsIcon</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule_itemMenu"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <androidx.appcompat.widget.ContentFrameLayout
            android:id="@+id/schedule_itemMenu_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:alpha="0.05"
            android:background="@drawable/shape_rectangle_right_rounded_max"
            tools:backgroundTint="@color/colorAsf" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/schedule_itemMenu_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:alpha="0.8"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@drawable/ic_schedule_asf"
            tools:tint="@color/colorAsf" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/schedule_itemMenu_fab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="24dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_next"
            tools:tint="@color/colorAsf" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/schedule_itemMenu_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/schedule_itemMenu_fab"
            app:layout_constraintStart_toEndOf="@id/schedule_itemMenu_icon"
            tools:text="@string/schedule_item_asf"
            tools:textColor="@color/colorAsf" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule_itemMenu"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?android:attr/selectableItemBackground">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/schedule_itemMenu_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:alpha="0.8"
            android:padding="16dp"
            tools:srcCompat="@drawable/ic_schedule_asf"
            tools:tint="@color/colorAsf" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/schedule_itemMenu_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            tools:text="@string/schedule_item_asf" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.ContentFrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_circle"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/schedule_itemMenu_fab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_next" />

    </androidx.appcompat.widget.ContentFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
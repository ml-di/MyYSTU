<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.TestActivity"
    android:layout_marginTop="24dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentFrameLayout"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/test_date_background"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:alpha="0.125"
                    android:background="@drawable/shape_rectangle_rounded_24dp"
                    android:backgroundTint="@color/colorPrimaryLight"
                    app:layout_constraintEnd_toEndOf="@id/test_date"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/test_date"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="28 декабря, 15:38" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/test_pin"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/test_date_background"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.15"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="@color/colorPrimaryLight" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:tint="@color/colorPrimaryLight"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_pin" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/menu_test_item"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:tint="@color/colorMenuIcon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_expand" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/test_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="16dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/contentFrameLayout"
                android:text="Губернатор Ярославской области Дмитрий Миронов поздравил победительницу чемпионата мира по профессиональному мастерству WorldSkills Kazan 2019 студентку #ЯГТУ Анастасию Камневу и команду, участвовавшую в соревнованиях, с победой.\n\nГубернатор поблагодарил коллективы вуза, Ярославского промышленно-экономического колледжа, наставников и экспертов из компании Р-Фарм за качественную подготовку и отличное выступление на мировом первенстве.\n\nЯ искренне рад вместе с вами разделить торжество победы на мировом чемпионате WorldSkills. Безусловно, это профессиональное признание и подтверждение высокого уровня подготовки наших специалистов, - отметил Дмитрий Миронов." />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/test_viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/test_text"/>

            <androidx.constraintlayout.widget.Placeholder
                app:layout_constraintTop_toBottomOf="@id/test_viewPager"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_constaint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="16dp">

    <androidx.appcompat.widget.ContentFrameLayout
        android:layout_width="8dp"
        android:layout_height="34dp"
        android:layout_marginTop="3dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/post_constaint" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/post_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/colorTextTertiary"
        android:textSize="21sp"
        tools:text="28 декабря | 15:38" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/post_pinned"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/colorTextTertiary"
        android:visibility="gone"
        tools:text="Запись закреплена" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/colorTextSecondary"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/post_date"
        tools:text="Текст записи" />

    <androidx.appcompat.widget.ContentFrameLayout
        android:id="@+id/news_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@id/post_text" />

</androidx.constraintlayout.widget.ConstraintLayout>

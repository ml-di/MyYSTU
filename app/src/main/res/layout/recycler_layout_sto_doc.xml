<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemStoDoc_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemStoDoc_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:tint="@color/colorPrimaryLight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_document" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemStoDoc_download_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@color/colorBackground"
        android:padding="3dp"
        android:tint="@color/colorPrimaryLight"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/itemStoDoc_icon"
        app:layout_constraintEnd_toEndOf="@id/itemStoDoc_icon"
        app:srcCompat="@drawable/ic_file_download" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemStoDoc_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorTextBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/itemStoDoc_summary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemStoDoc_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название файла" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemStoDoc_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.75"
        android:textColor="@color/colorTextBlack"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemStoDoc_icon"
        app:layout_constraintTop_toBottomOf="@id/itemStoDoc_name"
        tools:text="Проекты курсовые и дипломные. Требования к оформлению графической части дипломных и курсовых проектов химико-технологических специальностей" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemStoDoc_fileType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAllCaps="true"
        android:textColor="@color/colorTextIcon"
        android:textSize="7sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/itemStoDoc_icon"
        app:layout_constraintEnd_toEndOf="@id/itemStoDoc_icon"
        app:layout_constraintStart_toStartOf="@id/itemStoDoc_icon"
        app:layout_constraintTop_toTopOf="@id/itemStoDoc_icon"
        tools:text="DOC" />

    <androidx.appcompat.widget.ContentFrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:alpha="0.05"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
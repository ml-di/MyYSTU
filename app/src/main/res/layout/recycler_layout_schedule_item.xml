<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <androidx.appcompat.widget.ContentFrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:alpha="0.05"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/schedule_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:tint="@color/colorPrimaryLight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_document" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/schedule_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="70dp"
        android:textSize="21sp"
        app:layout_constraintLeft_toRightOf="@id/schedule_item_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/schedule_item_linear"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="РАССПИСАНИЕ" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/menu_schedule_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:scaleType="fitStart"
        android:tint="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_expand" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/schedule_item_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/schedule_item_text">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/schedule_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:textSize="12sp"
            tools:text="20,1 КБ" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/schedule_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_rectangle_rounded"
            android:backgroundTint="@color/colorPrimaryLight"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/colorToolBar"
            android:textSize="12sp"
            android:textStyle="bold"
            app:textAllCaps="true"
            tools:text="DOC" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/schedule_item_date_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:alpha="0.7"
            android:background="@drawable/shape_rectangle_rounded"
            android:backgroundTint="@color/colorDivider"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/schedule_item_text"
            tools:text="27/12/18" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post_constaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <androidx.appcompat.widget.ContentFrameLayout
            android:layout_width="8dp"
            android:layout_height="34dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toTopOf="@id/post_constaint"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/post_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/colorTextTertiary"
            tools:text="28 декабря | 15:38"
            android:textSize="21sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/post_pinned"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/colorTextTertiary"
            tools:text="Запись закреплена"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorTextSecondary"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/post_date"
            tools:text="Текст записи"
            android:textSize="16sp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/post_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:placeholderImage="@color/colorPlaceHolderImage"
            app:roundedCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/post_text"/>

        <androidx.appcompat.widget.ContentFrameLayout
            android:id="@+id/news_item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:background="@color/colorDivider"
            app:layout_constraintTop_toBottomOf="@id/post_photo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
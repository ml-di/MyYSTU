<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_constaint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:alpha="0.15"
            android:background="@drawable/shape_rectangle_right_rounded"
            android:backgroundTint="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="28 декабря | 15:38" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/post_pin"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:tint="@color/colorPrimaryLight"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/post_date"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_pin" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/menu_news_item"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginRight="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:tint="@color/colorDivider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_expand" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/colorTextSecondary"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/contentFrameLayout"
        tools:text="Текст записи" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/post_photos_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/post_text">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/post_photo_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            app:placeholderImage="@color/colorPlaceHolderImage"
            app:roundBottomRight="false"
            app:roundTopRight="false"
            app:roundedCornerRadius="15dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/post_photo_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                app:placeholderImage="@color/colorPlaceHolderImage"
                app:roundBottomLeft="false"
                app:roundBottomRight="false"
                app:roundTopLeft="false"
                app:roundedCornerRadius="15dp" />

            <androidx.appcompat.widget.ContentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/post_photo_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:placeholderImage="@color/colorPlaceHolderImage"
                    app:roundBottomLeft="false"
                    app:roundTopLeft="false"
                    app:roundTopRight="false"
                    app:roundedCornerRadius="15dp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/photoCountFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="4dp"
                        android:tint="@color/colorMenuItem"
                        app:srcCompat="@drawable/ic_image_black_24dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/photoCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/colorMenuItem"
                        android:textSize="16sp"
                        tools:text="8" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.ContentFrameLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.ContentFrameLayout
        android:id="@+id/news_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@id/post_photos_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>
